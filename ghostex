    <script>
        let userCounter = 1;

        function updateUserCount() {
            document.getElementById("userCount").innerText = Math.floor(Math.random() * 100) + 1;
        }
        setInterval(updateUserCount, 5000);
        updateUserCount();

        function updateBitcoinPrice() {
            fetch('https://api.coindesk.com/v1/bpi/currentprice/BTC.json')
                .then(response => response.json())
                .then(data => {
                    document.getElementById("bitcoinPrice").innerText = `$${data.bpi.USD.rate}`;
                });
        }
        setInterval(updateBitcoinPrice, 10000);
        updateBitcoinPrice();

        function simulateRadar() {
            setTimeout(() => {
                let dot = document.getElementById("radarDot");
                dot.style.display = "block";
                dot.style.left = "50%";
                dot.style.top = "50%";
                setTimeout(() => {
                    document.getElementById("radarMessage").innerText = "ALERTA: NASA detectou atividade anÃ´mala!";
                    setTimeout(() => {
                        dot.style.display = "none";
                        document.getElementById("radarMessage").innerText = "InterferÃªncia detectada. Um hacker do Alto comando da Nasa estÃ¡ tentando nos derrubar. OPS>> Sinal interrompido!";
                        setTimeout(() => {
                            document.getElementById("radarMessage").innerText = "Retornando ao espaÃ§o em tempo real";
                            simulateRadar();
                            document.getElementById("radarMessage").innerText = "Um Objeto voador nÃ£o indentificado foi encontrado na nossa orbita...";
                            document.getElementById("radarMessage").innerText = "Escaneando o espaÃ§o...";
                            simulateRadar();
                        }, 4000);
                    }, 40000);
                }, 20000);
            }, 20000);
        }
        simulateRadar();

        function postMessage() {
            let input = document.getElementById("forumInput");
            let postArea = document.getElementById("forumPosts");
            if (input.value.trim() !== "") {
                let post = document.createElement("p");
                post.innerHTML = `<b>X-GHOST${userCounter}:</b> ${input.value}`;
                post.style.color = "purple";
                postArea.appendChild(post);
                userCounter++;
                input.value = "";
            }
        }

        document.getElementById("forumInput").addEventListener("keydown", function(event) {
            if (event.key === "Enter") {
                postMessage();
            }
        });

        function simulateRadarMovement() {
            let dot = document.getElementById("radarDot");
            let angle = 0;
            let radius = 50;
            setInterval(() => {
                let x = 75 + radius * Math.cos(angle) - 4;
                let y = 75 + radius * Math.sin(angle) - 4;
                dot.style.left = x + "px";
                dot.style.top = y + "px";
                dot.style.display = "block";
                
                angle += 0.1;
                if (angle >= 2 * Math.PI) angle = 0;
            }, 100);
        }

        simulateRadarMovement();
    </script>
